{
  "name": "pref-doctor",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun run scripts/build.ts --current",
    "build:current": "bun run scripts/build.ts --current",
    "build:all": "bun run scripts/build.ts --all",
    "build:windows": "bun run scripts/build.ts --platform windows-x64",
    "build:macos": "bun run scripts/build.ts --platform darwin-x64",
    "build:linux": "bun run scripts/build.ts --platform linux-x64",
    "build:clean": "bun run scripts/build.ts --clean",
    "build:help": "bun run scripts/build.ts --help",
    "start": "bun run index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
